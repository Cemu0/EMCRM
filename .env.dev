# Development Environment Configuration
# Copy this file to .env and modify as needed

# Database Settings
DB_AWS_REGION=us-east-1
DB_DYNAMODB_ENDPOINT=http://dynamodb-local:8000
DB_MAIN_TABLE_NAME=crm_data
DB_EMAIL_TABLE_NAME=email_data
DB_MAX_RETRIES=2
DB_CONNECT_TIMEOUT=5
DB_READ_TIMEOUT=10
DB_MAX_POOL_CONNECTIONS=10

# OpenSearch Settings
OPENSEARCH_MODE=local
OPENSEARCH_ENDPOINT=http://opensearch-node1:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=aStrongPassw0rd!
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false

# Application Settings
APP_NAME=EMCRM
APP_DEBUG=false
APP_API_PORT=8080
APP_API_HOST=0.0.0.0
APP_LOG_LEVEL=DEBUG

# Authentication Settings (AWS Cognito Hosted UI)
AUTH_ENABLED=false
AUTH_COGNITO_USER_POOL_ID=your_user_pool_id
AUTH_COGNITO_CLIENT_ID=your_client_id
AUTH_COGNITO_CLIENT_SECRET=your_client_secret
AUTH_COGNITO_REGION=us-east-1
AUTH_JWT_ALGORITHM=RS256
AUTH_TOKEN_EXPIRY_HOURS=24

# Development specific settings
PYTHONPATH=/app
PYTHONUNBUFFERED=1